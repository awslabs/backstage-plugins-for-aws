{
  "name": "@aws/genai-plugin-for-backstage-backend",
  "description": "Backend package for the GenAI AWS plugins for Backstage",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "github:awslabs/backstage-plugins-for-aws",
    "directory": "plugins/genai/backend"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "Apache-2.0",
